generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Case {
  id          String   @id @default(cuid())
  title       String   
  description String   
  setting     String   
  victim      String   
  murderWeapon String  
  murderTime  String   
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  suspects     Suspect[]
  solution     Solution?
  coreEvidence CoreEvidence[]
  redHerrings  RedHerring[]
}

model Suspect {
  id          String  @id @default(cuid())
  caseId      String
  name        String
  emoji       String
  title       String
  bio         String
  personality String
  background  String
  secrets     String
  alibi       String
  isKiller    Boolean @default(false)
  
  case        Case    @relation(fields: [caseId], references: [id])
}

model Solution {
  id              String @id @default(cuid())
  caseId          String @unique
  killer          String
  killerMotives   String
  murderMethod    String
  keyEvidence     String
  timeline        String
  
  case            Case   @relation(fields: [caseId], references: [id])
}

model CoreEvidence {
  id           String   @id @default(cuid())
  caseId       String
  name         String
  emoji        String
  description  String
  importance   Int
  
  case         Case     @relation(fields: [caseId], references: [id])
}

model RedHerring {
  id            String @id @default(cuid())
  caseId        String
  name          String
  emoji         String
  description   String
  suspectTarget String
  
  case          Case   @relation(fields: [caseId], references: [id])
}